# üè• Clinic Management System - Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL Configuration
POSTGRES_PASSWORD=clinic_password_2024
POSTGRES_DB=clinic_management
POSTGRES_USER=clinic_user
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=clinic_mongo_2024
MONGO_DATABASE=clinic_history
MONGO_HOST=localhost
MONGO_PORT=27017

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# JWT Security (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL_APP=INFO
LOG_LEVEL_ROOT=WARN

# ==========================================
# DOCKER & DEPLOYMENT
# ==========================================

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=${{ github.actor }}
DOCKER_PASSWORD=${{ secrets.GITHUB_TOKEN }}

# Deployment URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=Clinic Management System

# ==========================================
# SECURITY SETTINGS
# ==========================================

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://clinic-management.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=200

# ==========================================
# BACKUP & MAINTENANCE
# ==========================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Debug Mode (Set to false in production)
DEBUG_MODE=false
DEV_TOOLS_ENABLED=false

# Hot Reload (Development only)
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELoad_ENABLED=true

# ==========================================
# HIPAA COMPLIANCE
# ==========================================

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO

# Data Encryption
DATA_ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=AES256

# Session Management
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_CONCURRENT_SESSIONS=3

# ==========================================
# NOTIFICATIONS
# ==========================================

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#clinic-alerts

# Email Notifications
ADMIN_EMAIL=admin@clinic-management.com
SUPPORT_EMAIL=support@clinic-management.com