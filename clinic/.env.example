# Archivo de ejemplo de variables de entorno para producción
# Copiar este archivo como .env y configurar con valores reales

# Base de datos PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/clinic_db
SPRING_DATASOURCE_USERNAME=clinic_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# JWT Secret (mínimo 256 bits)
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_256_bits_long

# MongoDB para registros médicos
MONGODB_URI=mongodb://localhost:27017/clinic_medical_records
MONGODB_DATABASE=clinic_medical_records

# Redis (opcional)
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=

# Configuración adicional (opcional)
SPRING_JPA_SHOW_SQL=false
SPRING_FLYWAY_ENABLED=true