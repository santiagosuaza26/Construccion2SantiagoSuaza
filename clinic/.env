# Configuración de Variables de Entorno para Clínica
SPRING_PROFILES_ACTIVE=dev

# Base de datos PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/clinic_db
SPRING_DATASOURCE_USERNAME=clinic_user
SPRING_DATASOURCE_PASSWORD=clinic_password_2025

# JWT Secret (mínimo 256 bits)
JWT_SECRET=clinic_jwt_secret_key_minimum_256_bits_long_for_security_2025

# MongoDB para registros médicos
SPRING_DATA_MONGODB_URI=mongodb://localhost:27017/clinic_medical_records
SPRING_DATA_MONGODB_DATABASE=clinic_medical_records

# Redis (opcional)
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=

# Configuración adicional
SPRING_JPA_SHOW_SQL=true
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_CREATE_SCHEMAS=true
SPRING_FLYWAY_LOCATIONS=classpath:db/migration

# Configuración de CORS
CLINIC_CORS_ALLOWED_ORIGINS=http://localhost:3000
CLINIC_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Configuración de logging
LOGGING_LEVEL_APP_CLINIC=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG